<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.sample.version16.Registration"
    android:id="@+id/activity_registration"
    android:background="@drawable/bg_green">

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/btnBack"
        android:layout_alignParentTop="true"
        android:text="GO BACK"
        android:textColor="#ffffffff"
        android:backgroundTintMode="multiply"
        android:background="#ff159b21" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/btnRegister"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:minHeight="60dp"
        android:minWidth="120dp"
        android:text="REGISTER"
        android:background="#ff159b21"
        android:textColor="#ffffffff" />

    <GridLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:id="@+id/gridLayout"
        android:layout_marginTop="38dp"
        android:layout_below="@+id/btnBack"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:background="@android:drawable/dialog_holo_dark_frame"
        android:padding="20dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="Username"
            android:id="@+id/textView3"
            android:layout_row="1"
            android:layout_column="0"
            android:textColor="#ffffffff" />

        <EditText
            android:layout_width="214dp"
            android:layout_height="wrap_content"
            android:id="@+id/etUser"
            android:layout_row="1"
            android:layout_column="2"
            android:hint="Enter username"
            android:textColor="#ffffffff"
            android:textColorHint="#ffc9c9c9" />

        <Space
            android:layout_width="20px"
            android:layout_height="20px"
            android:layout_row="2"
            android:layout_column="0" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="Password"
            android:id="@+id/textView4"
            android:layout_row="3"
            android:layout_column="0"
            android:textColor="#ffffffff" />

        <Space
            android:layout_width="20px"
            android:layout_height="20px"
            android:layout_row="3"
            android:layout_column="1" />

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textPassword"
            android:ems="10"
            android:id="@+id/etPassword"
            android:layout_row="3"
            android:layout_column="2"
            android:hint="Enter password"
            android:textColor="#ffffffff"
            android:textColorHint="#ffc9c9c9" />

        <Space
            android:layout_width="20px"
            android:layout_height="20px"
            android:layout_row="4"
            android:layout_column="0" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="Confirm"
            android:id="@+id/textView5"
            android:layout_row="5"
            android:layout_column="0"
            android:textColor="#ffffffff" />

        <Space
            android:layout_width="20px"
            android:layout_height="20px"
            android:layout_row="5"
            android:layout_column="1" />

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textPassword"
            android:ems="10"
            android:id="@+id/etConfirmPassword"
            android:layout_row="5"
            android:layout_column="2"
            android:hint="Reenter password"
            android:textColor="#ffffffff"
            android:textColorHint="#ffc9c9c9" />
    </GridLayout>

    <Space
        android:layout_width="20px"
        android:layout_height="20px"
        android:layout_row="0"
        android:layout_column="0"
        android:layout_alignBottom="@+id/btnBack"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="30dp"
        android:layout_marginStart="30dp"
        android:layout_alignTop="@+id/gridLayout"
        android:id="@+id/space" />

    <Space
        android:layout_width="20px"
        android:layout_height="20px"
        android:layout_above="@+id/space"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/btnBack"
        android:layout_alignRight="@+id/btnBack"
        android:layout_alignEnd="@+id/btnBack" />

</RelativeLayout>
